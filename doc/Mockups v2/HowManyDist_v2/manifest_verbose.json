{
	"name": "How Many Days",
	"version": "0.1",
	"manifest_version": 2,
	"description": "How Many Days have been since...",
	// http://developer.chrome.com/apps/manifest.html
	"app": {
		"urls": [
			"*://mail.google.com/mail/",
			"*://www.google.com/mail/"
		],
		"launch": {
			"web_url": "http://mail.google.com/mail/"
		}
	},
	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"web_accessible_resources": [
		"images/icon48.png"
	],
	"author": "Arnau-Lenin Gols Rovira",
	"offline_enabled": true,
	"permissions": [
		"clipboardRead",
		"clipboardWrite",
		"notifications",
		//'alarms' is only allowed for extensions, legacy packaged apps and packaged apps, and this is a hosted app.
		"alarms",
		//'storage' is only allowed for extensions, legacy packaged apps and packaged apps, and this is a hosted app.
		"storage"
	]
}